{
  "name": "@payment/backend",
  "description": "",
  "version": "1.0.0",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "NODE_ENV=local RUNTIME_ENV=local nest start --watch",
    "start:test": "yarn run copy-files && NODE_ENV=ci RUNTIME_ENV=ci nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=prod node dist/src/main",
    "copy-files": "mkdir -p dist/master_data && cp master_data/*.csv dist/master_data",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose --forceExit --runInBand",
    "test:watch": "jest --watch --maxWorkers=1",
    "test:cov": "NODE_ENV=ci RUNTIME_ENV=ci jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "test:pipeline": "NODE_ENV=ci RUNTIME_ENV=ci jest  --config ./test/jest.json --runInBand --detectOpenHandles --verbose",
    "lint-staged": "lint-staged",
    "nibble": "eslint-nibble --ext .ts .",
    "typeorm": "ts-node ../../../../node_modules/.bin/typeorm",
    "typeorm:run-migrations": "yarn run typeorm migration:run -d ./src/database/datasource.ts",
    "typeorm:generate-migration": "yarn run typeorm migration:generate -d ./src/database/datasource.ts ./src/database/migrations/migration",
    "typeorm:create-migration": "yarn run typeorm migration:create ./src/database/migrations/migration",
    "typeorm:revert-migration": "yarn run typeorm -d ./src/database/datasource.ts migration:revert",
    "docs": "npx @compodoc/compodoc -c compodoc.yaml",
    "version:major": "yarn version major",
    "version:minor": "yarn version minor",
    "version:patch": "yarn version patch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.388.0",
    "@aws-sdk/client-sns": "3.388.0",
    "@aws-sdk/lib-storage": "3.397.0",
    "@nestjs/common": "10.1.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.3",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/swagger": "7.1.8",
    "@nestjs/typeorm": "10.0.0",
    "@vendia/serverless-express": "4.10.1",
    "aws-lambda": "1.0.7",
    "axios": "1.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "csvtojson": "2.0.10",
    "date-fns": "2.30.0",
    "decimal.js": "10.4.3",
    "exceljs": "4.3.0",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "jsonwebtoken": "9.0.1",
    "nest-winston": "1.9.3",
    "pg": "8.11.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.1",
    "rxjs": "7.8.1",
    "typeorm": "0.3.17",
    "underscore": "1.13.6",
    "webpack": "5.88.2",
    "winston": "3.10.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.21",
    "@faker-js/faker": "8.0.2",
    "@golevelup/ts-jest": "0.4.0",
    "@nestjs/cli": "10.1.11",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.1.3",
    "@types/aws-lambda": "8.10.119",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/jsonwebtoken": "9.0.2",
    "@types/multer": "1.4.7",
    "@types/node": "20.4.9",
    "@types/pg": "8.10.2",
    "@types/supertest": "2.0.12",
    "@types/underscore": "1.11.6",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-nibble": "8.1.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "jest": "29.6.2",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "supertest": "6.3.3",
    "terser-webpack-plugin": "5.3.9",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "./src/docs"
    ],
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "html"
    ]
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier --write",
      "eslint  --fix"
    ]
  }
}

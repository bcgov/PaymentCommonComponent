{
  "name": "@payment/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn run copy-files && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "yarn run copy-files && NODE_ENV=local RUNTIME_ENV=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=prod node dist/main",
    "copy-files": "mkdir -p dist/master_data && cp master_data/*.csv dist/master_data",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose --forceExit --runInBand",
    "test:watch": "jest --watch --maxWorkers=1",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "test:pipeline": "NODE_ENV=test RUNTIME_ENV=test jest  --config ./test/jest.json --runInBand --detectOpenHandles",
    "lint-staged": "lint-staged",
    "nibble": "eslint-nibble --ext .ts src/",
    "typeorm": "ts-node ../../../../node_modules/.bin/typeorm",
    "typeorm:run-migrations": "yarn run typeorm migration:run -d ./src/database/datasource.ts",
    "typeorm:generate-migration": "yarn run typeorm migration:generate -d ./src/database/datasource.ts ./src/database/migrations/migration",
    "typeorm:create-migration": "yarn run typeorm migration:create ./src/database/migrations/migration",
    "typeorm:revert-migration": "yarn run typeorm -d ./src/database/datasource.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "9.2.1",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.2.1",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/swagger": "6.1.4",
    "@nestjs/typeorm": "9.0.1",
    "@vendia/serverless-express": "4.10.1",
    "aws-lambda": "1.0.7",
    "axios": "1.2.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "csvtojson": "2.0.10",
    "date-fns": "2.29.3",
    "exceljs": "^4.3.0",
    "express": "4.18.2",
    "nest-aws-sdk": "3.0.0",
    "nest-winston": "1.8.0",
    "node-nats-streaming": "0.3.2",
    "pg": "8.8.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.1.1",
    "rxjs": "7.8.0",
    "typeorm": "0.3.11",
    "underscore": "1.13.6",
    "webpack": "5.75.0",
    "winston": "3.8.2",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.8",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.2.1",
    "@types/aws-lambda": "8.10.109",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.6",
    "@types/multer": "1.4.7",
    "@types/node": "18.11.18",
    "@types/pg": "8.6.6",
    "@types/supertest": "2.0.12",
    "@types/underscore": "1.11.4",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "aws-sdk": "2.1299.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-nibble": "8.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "import-local": "3.1.0",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
